<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".HlistActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:background="@drawable/add_bg">

       <ImageView
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:layout_marginTop="5dp"
           android:layout_marginLeft="5dp"
           android:layout_marginBottom="5dp"
           android:src="@drawable/ms"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               android:layout_marginLeft="5dp"
               android:text="RAMAIAH Memorial Hospitals"
               android:textSize="18sp"
               android:textStyle="bold"
               android:textColor="#000"/>
           <Button
               android:id="@+id/msrBtn"
               android:layout_marginTop="8dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="5dp"
               android:layout_marginRight="10dp"
               android:background="@drawable/edittextstyle"
               android:backgroundTint="@color/colorAccent"
               android:layout_marginBottom="8dp"
               android:text="Click here for more info..." />
       </LinearLayout>

   </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/add_bg">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/fortis_logo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:text="FORTIS Hospitals"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"/>
            <Button
                android:id="@+id/fortisBtn"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edittextstyle"
                android:backgroundTint="@color/colorAccent"
                android:layout_marginBottom="8dp"
                android:text="Click here for more info..." />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/add_bg">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/apollo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:text="APOLLO Hospitals"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"/>
            <Button
                android:id="@+id/apolloBtn"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edittextstyle"
                android:backgroundTint="@color/colorAccent"
                android:layout_marginBottom="8dp"
                android:text="Click here for more info..." />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/add_bg">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/sapthagiri"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:text="SAPTHAGIRI Hospitals"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"/>
            <Button
                android:id="@+id/sapthagiriBtn"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edittextstyle"
                android:backgroundTint="@color/colorAccent"
                android:layout_marginBottom="8dp"
                android:text="Click here for more info..." />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>